{% extends 'base.html.twig' %}

{% block title %}Cars !{% endblock %}

{% block body %}
{% for product in products %}


<div class="card text-white bg-primary m-5 w-25">
  <h3 class="card-header">
  <a href="{{path('product', {'id' : product.id})}}"><div style="color: orange;">{{product.name}}</div></a>
</h3>
  <div class="card-body">
    <h5 class="card-title">
    <p>{{product.subtitle}}</p>
</h5>
  </div>
    <div>
    <a href="{{path('product', {'id' : product.id})}}"> <img alt="oups" class="w-50 h-50 m-5" src="/assets/img/products/images/{{product.image}}"></a>
</div>
  <div class="card-body">
    <p class="card-text"><p>{{product.description}}</p>
  </div>
  <div class="card-body">
    <p>{{ (product.price /100) |number_format(2,',','.')}} € </p>
  </div>
  <div class="card-body">
    <a href="{{ path('ajouterPanier', { 'id' : product.id})}}" class="btn btn-warning">Add to cart</a>
  </div>
  </div>
  
  <hr>
{% endfor %}
{% endblock %}

