{% extends 'base.html.twig' %}

{% block title %}Cars !
{% endblock %}

{% block body %}
	<br>
	<h1 class="rounded text-center bg-info" style="color: black; background-color: orange;">Find your car ( OO \../ OO )
	</h1>

	<br>
	<div
		class="row justify-content-center bg-primary rounded px-4">
		{# <div class="row justify-content-center m-3"> #}
		{% for product in products %}

			<div class="card text-white bg-dark w-25 m-4">
				<h3 class="card-header">
					<a style="text-decoration: none;" href="{{path('product', {'id' : product.id})}}">
						<div class="row rounded justify-content-center" style="color: orange;">{{product.name}}</div>
					</a>
				</h3>
				<div class="card-body">
					<h5 class="card-title">
						<p>{{product.subtitle}}</p>
					</h5>
				</div>
				<div class="row justify-content-center mx-auto">
					<a href="{{path('product', {'id' : product.id})}}">
						<img alt="oups" class="row img-fluid rounded justify-content-center m-1" src="/assets/img/products/images/{{product.image}}"></a>
				</div>
				<div class="card-body">
					<p class="card-text"></p>
					<p>{{product.description}}</p>
				</div>
				<div class="card-body">
					<p>{{ (product.price /100) |number_format(2,',','.')}}
						€
					</p>
				</div>
				{% if app.user %}
				<div class="card-body">
					<a href="{{ path('ajouterPanier', { 'id' : product.id})}}" class="btn btn-info">Add to cart</a>
				</div>
				{% endif %}
				{% if app.user == false %}
				<div class="card-body">
					<a href="{{ path('app_login')}}" class="btn btn-info">Add to cart</a>
				</div>
				{% endif %}
			</div>
		{% endfor %}
		<hr>
		{# </div> #}

	</div>
{% endblock %}

